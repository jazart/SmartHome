<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/rubik</item>
        <item name="textInputStyle">@style/DefaultTILTheme</item>
        <item name="bottomAppBarStyle">@style/BottomBarTheme</item>
        <item name="toolbarStyle">@style/BottomBarTheme</item>
    </style>

    <style name="DefaultTILTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="counterOverflowTextColor">@android:color/holo_red_light</item>
        <item name="boxStrokeWidth">3dp</item>
        <item name="hintTextColor">@color/colorPrimaryDark</item>
        <item name="errorTextColor">@color/colorAccent</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
    </style>

    <style name="BottomBarTheme" parent="Widget.MaterialComponents.BottomAppBar.Colored">
        <item name="android:colorControlActivated">@color/colorAccent</item>
        <item name="android:colorActivatedHighlight">@color/colorAccent</item>
        <item name="android:colorLongPressedHighlight">@color/colorAccent</item>
        <item name="android:layout_marginStart">2dp</item>
    </style>

</resources>
